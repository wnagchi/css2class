<!-- 微信小程序页面示例 -->
<view class="container mx-auto p-4">
  <!-- 页面头部 -->
  <view class="bg-headerblue text-white p-6 rounded-lg mb-6 shadow-lg">
    <view class="flex items-center justify-between">
      <view>
        <text class="text-2xl font-bold block mb-1">小程序示例</text>
        <text class="text-blue-100">CSS Optimizer for 微信小程序</text>
      </view>
      <view class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
        <text class="text-xl">🚀</text>
      </view>
    </view>
  </view>

  <!-- 功能展示卡片 -->
  <view class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- 颜色系统卡片 -->
    <view class="bg-white p-4 rounded-lg shadow-md">
      <view class="flex items-center mb-3">
        <text class="text-lg font-semibold text-gray-800">🎨 颜色系统</text>
      </view>
      <view class="space-y-2">
        <view class="flex items-center justify-between">
          <text class="text-gray-600 text-sm">主色调</text>
          <view class="w-6 h-6 bg-primary rounded-full shadow-sm"></view>
        </view>
        <view class="flex items-center justify-between">
          <text class="text-gray-600 text-sm">成功色</text>
          <view class="w-6 h-6 bg-success rounded-full shadow-sm"></view>
        </view>
        <view class="flex items-center justify-between">
          <text class="text-gray-600 text-sm">警告色</text>
          <view class="w-6 h-6 bg-warning rounded-full shadow-sm"></view>
        </view>
        <view class="flex items-center justify-between">
          <text class="text-gray-600 text-sm">错误色</text>
          <view class="w-6 h-6 bg-error rounded-full shadow-sm"></view>
        </view>
      </view>
    </view>

    <!-- 间距系统卡片 -->
    <view class="bg-white p-4 rounded-lg shadow-md">
      <view class="flex items-center mb-3">
        <text class="text-lg font-semibold text-gray-800">📏 间距系统</text>
      </view>
      <view class="space-y-3">
        <view class="bg-gray-100 p-1 rounded">
          <view class="bg-blue-200 p-1 rounded text-xs text-center">小间距</view>
        </view>
        <view class="bg-gray-100 p-3 rounded">
          <view class="bg-blue-300 p-2 rounded text-sm text-center">中间距</view>
        </view>
        <view class="bg-gray-100 p-4 rounded">
          <view class="bg-blue-400 p-2 rounded text-sm text-center">大间距</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 交互按钮组 -->
  <view class="bg-white p-4 rounded-lg shadow-md mb-6">
    <text class="text-lg font-semibold text-gray-800 block mb-4">🎯 交互效果</text>
    <view class="grid grid-cols-2 gap-3">
      <button class="bg-primary text-white py-3 px-4 rounded-lg text-sm font-medium active:bg-blue-600 transition-colors">
        主要按钮
      </button>
      <button class="bg-success text-white py-3 px-4 rounded-lg text-sm font-medium active:bg-green-600 transition-colors">
        成功按钮
      </button>
      <button class="bg-warning text-white py-3 px-4 rounded-lg text-sm font-medium active:bg-yellow-600 transition-colors">
        警告按钮
      </button>
      <button class="bg-error text-white py-3 px-4 rounded-lg text-sm font-medium active:bg-red-600 transition-colors">
        错误按钮
      </button>
    </view>
  </view>

  <!-- 列表组件 -->
  <view class="bg-white rounded-lg shadow-md mb-6 overflow-hidden">
    <view class="bg-gray-50 px-4 py-3 border-b border-gray-200">
      <text class="text-lg font-semibold text-gray-800">📋 列表组件</text>
    </view>
    <view class="divide-y divide-gray-200">
      <view class="p-4 flex items-center justify-between hover:bg-gray-50 transition-colors">
        <view class="flex items-center">
          <view class="w-8 h-8 bg-primary rounded-full flex items-center justify-center mr-3">
            <text class="text-white text-xs font-bold">1</text>
          </view>
          <view>
            <text class="font-medium text-gray-800 block">列表项一</text>
            <text class="text-gray-500 text-sm">这是描述文本</text>
          </view>
        </view>
        <text class="text-gray-400">›</text>
      </view>
      <view class="p-4 flex items-center justify-between hover:bg-gray-50 transition-colors">
        <view class="flex items-center">
          <view class="w-8 h-8 bg-success rounded-full flex items-center justify-center mr-3">
            <text class="text-white text-xs font-bold">2</text>
          </view>
          <view>
            <text class="font-medium text-gray-800 block">列表项二</text>
            <text class="text-gray-500 text-sm">这是描述文本</text>
          </view>
        </view>
        <text class="text-gray-400">›</text>
      </view>
      <view class="p-4 flex items-center justify-between hover:bg-gray-50 transition-colors">
        <view class="flex items-center">
          <view class="w-8 h-8 bg-warning rounded-full flex items-center justify-center mr-3">
            <text class="text-white text-xs font-bold">3</text>
          </view>
          <view>
            <text class="font-medium text-gray-800 block">列表项三</text>
            <text class="text-gray-500 text-sm">这是描述文本</text>
          </view>
        </view>
        <text class="text-gray-400">›</text>
      </view>
    </view>
  </view>

  <!-- 表单组件 -->
  <view class="bg-white p-4 rounded-lg shadow-md mb-6">
    <text class="text-lg font-semibold text-gray-800 block mb-4">📝 表单组件</text>
    <view class="space-y-4">
      <view>
        <text class="block text-sm font-medium text-gray-700 mb-1">姓名</text>
        <input 
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="请输入姓名"
        />
      </view>
      <view>
        <text class="block text-sm font-medium text-gray-700 mb-1">手机号</text>
        <input 
          type="number"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="请输入手机号"
        />
      </view>
      <view>
        <text class="block text-sm font-medium text-gray-700 mb-1">留言</text>
        <textarea 
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="请输入留言内容"
          rows="3"
        ></textarea>
      </view>
      <button class="w-full bg-primary text-white py-3 px-4 rounded-lg font-medium active:bg-blue-600 transition-colors">
        提交表单
      </button>
    </view>
  </view>

  <!-- 响应式展示 -->
  <view class="bg-gradient-to-r from-primary to-success p-6 rounded-lg mb-6 text-white">
    <text class="text-xl font-bold block mb-2">🌟 响应式设计</text>
    <view class="grid grid-cols-2 md:grid-cols-4 gap-2 text-center text-sm">
      <view class="bg-white bg-opacity-20 p-2 rounded">
        <text>移动端</text>
      </view>
      <view class="bg-white bg-opacity-20 p-2 rounded">
        <text>平板端</text>
      </view>
      <view class="bg-white bg-opacity-20 p-2 rounded">
        <text>桌面端</text>
      </view>
      <view class="bg-white bg-opacity-20 p-2 rounded">
        <text>大屏端</text>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="bg-gray-800 text-white p-4 rounded-lg text-center">
    <text class="text-gray-300 text-sm block mb-2">
      CSS Optimizer 微信小程序示例
    </text>
    <view class="flex justify-center space-x-4">
      <text class="text-blue-400 text-sm">GitHub</text>
      <text class="text-blue-400 text-sm">文档</text>
      <text class="text-blue-400 text-sm">支持</text>
    </view>
  </view>
</view>